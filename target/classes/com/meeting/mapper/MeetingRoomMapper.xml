<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.meeting.mapper.MeetingRoomMapper">
    <resultMap id="BaseResultMap" type="com.meeting.model.MeetingRoom" >
        <id property="id" column="id" jdbcType="INTEGER" />
        <result property="num" column="num" jdbcType="INTEGER" />
        <result property="name" column="name" jdbcType="VARCHAR" />
        <result property="capacity" column="capacity" jdbcType="INTEGER" />
        <result property="status" column="status" jdbcType="INTEGER" />

    </resultMap>
    <select id="getAllMr" resultMap="BaseResultMap">
        select * from room;
    </select>
    <select id="getMrByName" resultMap="BaseResultMap">
        select * from room where name like  CONCAT('%',CONCAT(#{name,jdbcType=VARCHAR},'%'))
    </select>
    <update id="updateRoom">
        update room set num = #{num},name=#{name},capacity=#{capacity},status=#{status} where id=#{id};
    </update>
    <insert id="addMr" >
        insert into room (num,name,capacity,status) values (#{num},#{name},#{capacity},#{status});
    </insert>
    <delete id="deleteRoom">
        delete from room where id=#{id};
    </delete>
</mapper>